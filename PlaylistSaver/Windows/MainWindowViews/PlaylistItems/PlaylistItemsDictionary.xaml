    </Style>

    <Style x:Key="HoverHighlight" TargetType="StackPanel">
        <Setter Property="Opacity" Value="0.7"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#4fff"/>
                <Setter Property="Opacity" Value="0.9"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="MissingItemsText" TargetType="TextBlock" BasedOn="{StaticResource DefaultTextblock}">
        <Setter Property="FontSize" Value="15"/>
        <Setter Property="Padding" Value="8"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <Style x:Key="MarkAllAsSeen" TargetType="Image" BasedOn="{StaticResource DefaultImage}">
        <Setter Property="Height" Value="11"/>
        <Setter Property="Margin" Value="8 0 3 0"/>
    </Style>
    
    <Style x:Key="ExpandHiddenItems" TargetType="Image" BasedOn="{StaticResource HighlightHoverImage}">
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="30 0 52 0"/>
    </Style>

    <Style x:Key="PlaylistDate" TargetType="StackPanel">
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Orientation" Value="Horizontal"/>
        <Setter Property="Margin" Value="0 0 20 0"/>
        <Setter Property="Opacity" Value="0.8"/>
    </Style>
    
    <Style x:Key="PlaylistDateBorder" TargetType="Border">
        <Setter Property="Panel.ZIndex" Value="5"/>
        <Setter Property="VerticalAlignment" Value="Top"/>
        <Setter Property="HorizontalAlignment" Value="Right"/>
        <Setter Property="BorderBrush" Value="#393939"/>
        <Setter Property="BorderThickness" Value="1.5"/>
        <Setter Property="CornerRadius" Value="2"/>
        <Setter Property="Background" Value="{StaticResource Background_topbar}"/>
    </Style>

    <Style x:Key="PlaylistDateText" TargetType="TextBlock" BasedOn="{StaticResource DefaultTextblock}">
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Right"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Margin" Value="0 0 7 0"/>
    </Style>

    <Style x:Key="PlaylistDatePick" TargetType="TextBlock" BasedOn="{StaticResource DefaultTextblock}">
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Opacity" Value="0.6"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Padding" Value="0 5 0 5"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Opacity" Value="0.9"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="PlaylistDateImage" TargetType="Image" BasedOn="{StaticResource DefaultImage}">
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Height" Value="10"/>
        <Setter Property="Source" Value="/Resources/Images/Symbols/White/expand_arrow_24px.png"/>
    </Style>

</ResourceDictionary>