<UserControl x:Class="PlaylistSaver.Windows.MainWindowViews.PlaylistsList.PlaylistsListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PlaylistSaver.Windows.MainWindowViews.PlaylistsList"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid Grid.Row="1" Grid.Column="1" Background="{StaticResource Background_topbar}">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 0 30 0">
                <Image Cursor="Hand" Height="32" Margin="9 0" Source="/Resources/Images/White/add_32px.png" ToolTip="Add new playlists"/>
                <Image Cursor="Hand" Height="32" Margin="9 0" Source="/Resources/Images/White/cancel_white_32px.png" ToolTip="Delete playlists"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
