                        </Grid.RowDefinitions>
                        <Image Grid.ColumnSpan="2" Source="/Resources/Images/Temp/PlaylistThumbnail.png"/>
                        <Grid Grid.Column="1" Background="#C0393939">
                            <StackPanel VerticalAlignment="Center">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <TextBlock VerticalAlignment="Center" FontSize="14" Text="189" HorizontalAlignment="Center" Style="{StaticResource DefaultTextblock}"/>
                                    <Image VerticalAlignment="Center" Margin="2 0 0 0" Height="17" Source="/Resources/Images/White/video_dots_24px.png"/>
                                </StackPanel>
                                <Image Style="{StaticResource AddImage}" Height="20" Source="/Resources/Images/White/add_32px.png"/>
                            </StackPanel>
                        </Grid>
                        <TextBlock Grid.ColumnSpan="2" TextWrapping="Wrap" Margin="5" FontSize="19" Grid.Row="1" Text="Muzyka" Style="{StaticResource DefaultTextblock}"/>
                    </Grid>

                </StackPanel>
            </ScrollViewer>
            <Grid Grid.Row="4">
                <StackPanel Margin="0 0 0 2" Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock Style="{StaticResource PlaylistCount}">
                    7 playlists
                    </TextBlock>
                    <Button Style="{StaticResource AddButton}">
                    Add
                    </Button>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</UserControl>
